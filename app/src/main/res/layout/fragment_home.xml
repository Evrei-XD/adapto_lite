<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ijhfiuevbnioasjhviuer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidline_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidline_mid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.485" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidline_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidline_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.05" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidline_1_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_creator="@integer/np_def_min"
            app:layout_constraintGuide_percent="0.03"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidline_1_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.036" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidline_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.7" />



        <ImageView
            android:id="@+id/speed_arrow_iv"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:src="@drawable/speed_arrow"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="6dp"
            app:layout_constraintTop_toTopOf="@+id/guidline_1_3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="ContentDescription" />
        <ImageView
            android:id="@+id/closing_the_arrow_layer_iv"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:src="@drawable/closing_the_arrow_layer"
            android:layout_marginTop="10dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            app:layout_constraintTop_toTopOf="@+id/power_arrow_iv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="ContentDescription" />
        <ImageView
            android:id="@+id/underlayer_power_arrow_iv"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:src="@drawable/underlayer_power_arrow"
            android:layout_marginTop="12dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            app:layout_constraintTop_toTopOf="@+id/power_arrow_iv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="ContentDescription" />
        <ImageView
            android:id="@+id/power_arrow_iv"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:src="@drawable/arrow_power"
            android:layout_marginTop="5dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="6dp"
            app:layout_constraintTop_toTopOf="@+id/guidline_1_3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="ContentDescription" />
        <ImageView
            android:id="@+id/closing_the_2_arrow_layer_iv"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:src="@drawable/closing_the_2_arrow_layer"
            android:layout_marginTop="10dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            app:layout_constraintTop_toTopOf="@+id/power_arrow_iv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="ContentDescription" />
        <ImageView
            android:id="@+id/percent_battery_iv"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:src="@drawable/battery_circle"
            android:layout_marginTop="10dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="6dp"
            app:layout_constraintTop_toTopOf="@+id/power_arrow_iv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="ContentDescription" />
        <ImageView
            android:id="@+id/temperature_iv"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:src="@drawable/temperature_circle"
            android:layout_marginTop="10dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            app:layout_constraintTop_toTopOf="@+id/power_arrow_iv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="ContentDescription" />
        <ImageView
            android:id="@+id/closing_temperature_batttery_layer_iv"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:src="@drawable/closing_temperature_battery_layer"
            android:layout_marginTop="10dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            app:layout_constraintTop_toTopOf="@+id/power_arrow_iv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="ContentDescription" />
        <ImageView
            android:id="@+id/main_iv"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:src="@drawable/display_center"
            android:layout_marginTop="10dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            app:layout_constraintTop_toTopOf="@+id/power_arrow_iv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/main_speed_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="35dp"
            android:fontFamily="@font/ropa_sans_pro_regular"
            android:text="120"
            android:textColor="@color/white"
            android:textSize="100sp"
            app:layout_constraintBottom_toBottomOf="@+id/trip_tv"
            app:layout_constraintEnd_toStartOf="@+id/guidline_mid"
            app:layout_constraintStart_toStartOf="@+id/guidline_mid"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/main_speed_units_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/ropa_sans_pro_regular"
            android:text="kmh"
            android:textColor="@color/white_70"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/main_speed_tv"
            app:layout_constraintEnd_toStartOf="@+id/guidline_mid"
            app:layout_constraintStart_toStartOf="@+id/guidline_mid"
            tools:ignore="HardcodedText"/>
        <TextView
            android:id="@+id/trip_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:fontFamily="@font/exo2_0_regular"
            android:text="TRIP: 00000"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/speed_arrow_iv"
            app:layout_constraintEnd_toStartOf="@+id/guidline_mid"
            app:layout_constraintStart_toStartOf="@+id/guidline_mid"
            tools:ignore="HardcodedText"/>
        <TextView
            android:id="@+id/odo_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/exo2_0_regular"
            android:text="ODO: 00000"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/guidline_mid"
            app:layout_constraintStart_toStartOf="@+id/guidline_mid"
            app:layout_constraintTop_toBottomOf="@+id/trip_tv"
            tools:ignore="HardcodedText"/>
        <TextView
            android:id="@+id/mode_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/ropa_sans_pro_regular"
            android:text="ECO"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="@+id/mode_type_tv"
            app:layout_constraintStart_toStartOf="@+id/guidline_mid"
            tools:ignore="HardcodedText"/>
        <TextView
            android:id="@+id/mode_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="110dp"
            android:fontFamily="@font/ropa_sans_pro_regular"
            android:text="POWER PROFILE"
            android:textColor="@color/white_70"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/main_speed_tv"
            app:layout_constraintStart_toStartOf="@+id/guidline_mid"
            tools:ignore="HardcodedText,SmallSp"/>
        <TextView
            android:id="@+id/power_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="125dp"
            android:layout_marginBottom="17dp"
            android:fontFamily="@font/ropa_sans_pro_regular"
            android:text="+25.5"
            android:textColor="@color/power_mint"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="@+id/main_speed_tv"
            app:layout_constraintEnd_toStartOf="@+id/guidline_mid"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/power_units_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="103dp"
            android:fontFamily="@font/ropa_sans_pro_regular"
            android:text="kW"
            android:textColor="@color/white_70"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/power_tv"
            app:layout_constraintEnd_toStartOf="@+id/guidline_mid"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/percent_battery_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="130dp"
            android:fontFamily="@font/ropa_sans_pro_regular"
            android:text="81"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="@+id/trip_tv"
            app:layout_constraintEnd_toStartOf="@+id/guidline_mid"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/percent_battery_units_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="115dp"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/ropa_sans_pro_regular"
            android:text="%"
            android:textColor="@color/white_70"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/percent_battery_tv"
            app:layout_constraintEnd_toStartOf="@+id/guidline_mid"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/covered_distance_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="130dp"
            android:fontFamily="@font/ropa_sans_pro_regular"
            android:text="22"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_constraintEnd_toStartOf="@+id/guidline_mid"
            app:layout_constraintTop_toBottomOf="@+id/odo_tv"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/covered_distance_units_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="110dp"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/ropa_sans_pro_regular"
            android:text="km"
            android:textColor="@color/white_70"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/covered_distance_tv"
            app:layout_constraintEnd_toStartOf="@+id/guidline_mid"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/dots_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="50dp"
            android:fontFamily="@font/ropa_sans_pro_regular"
            android:text=".  .  .  . "
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_constraintStart_toEndOf="@+id/covered_distance_units_tv"
            app:layout_constraintTop_toTopOf="@+id/odo_tv"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/percent_distance_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ropa_sans_pro_regular"
            android:layout_marginEnd="40dp"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_constraintEnd_toStartOf="@+id/guidline_mid"
            app:layout_constraintTop_toBottomOf="@+id/odo_tv"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/percent_distance_units_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="25sp"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/ropa_sans_pro_regular"
            android:text="%"
            android:textColor="@color/white_70"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/covered_distance_tv"
            app:layout_constraintEnd_toStartOf="@+id/guidline_mid"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/temperature_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:fontFamily="@font/ropa_sans_pro_regular"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="@+id/guidline_mid"
            app:layout_constraintTop_toBottomOf="@+id/odo_tv"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/temperature_units_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/ropa_sans_pro_regular"
            android:text="°C"
            android:textColor="@color/white_70"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/covered_distance_tv"
            app:layout_constraintStart_toEndOf="@+id/temperature_tv"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/main_temperature_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="130dp"
            android:fontFamily="@font/ropa_sans_pro_regular"
            android:text="63°"
            android:textColor="@color/limon"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="@+id/trip_tv"
            app:layout_constraintStart_toStartOf="@+id/guidline_mid"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/main_temperature_unit_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ropa_sans_pro_regular"
            android:text="CONTROLLER"
            android:textColor="@color/white_70"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@+id/mode_type_tv"
            app:layout_constraintTop_toBottomOf="@+id/main_temperature_tv"
            tools:ignore="HardcodedText,SmallSp" />

        <SeekBar
            android:id="@+id/test_sb"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:max="146"
            android:min="0"
            android:progress="60"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guidline_right"
            app:layout_constraintStart_toStartOf="@+id/guidline_left"
            tools:ignore="MissingConstraints"
            tools:targetApi="o" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <!--    </androidx.cardview.widget.CardView>-->

</androidx.constraintlayout.widget.ConstraintLayout>